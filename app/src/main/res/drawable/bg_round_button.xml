<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- OUTER WHITE BORDER -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

    <!-- INNER GRADIENT CIRCLE -->
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">

        <shape android:shape="oval">
            <gradient
                android:startColor="#FF7078FF"
                android:endColor="#FF3E46D8"
                android:angle="90" />
        </shape>
    </item>

</layer-list>
